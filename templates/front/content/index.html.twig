{% extends 'base_back.html.twig' %}

{% block title %}Contenu{% endblock %}

{% block body %}
    <section class="global-container">
        <div class="panel">
            <header>
                <ul>
                    <li>Contenus généraux</li>
                    <li>Nos conseils</li>
                    <li>Discusssions</li>
                    <div id="myModal" class="modal">
